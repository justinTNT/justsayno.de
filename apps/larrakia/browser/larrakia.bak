
var updatePageWhenReady, showNewPage;


function callFirst(route) {
	$('body').animate({ scrollTop: 0}, 1234);
	var $d = $('div#innermaintabbox');
	$d.height($d.height()).animate({'min-height':0, height:3}, 666, function(){
				showNewPage();
			});
}


function callBefore(route, from, to) {

	updatePageWhenReady = function() {
		to.html(from.html());
		updateLinks(to);
		finallyUpdate(route);
	};

	showNewPage = _.after(2, function(){
		updatePageWhenReady();
		var h = $('div#maintab').height();
		if (h > 430 && h < 820) h = 820;
		$('div#innermaintabbox').animate({height:h}, 666, function(){
				$(this).css({'min-height':h}).css({height:'auto'});
			});
	});

	if (!to) {
		alert('straight object data comin in to larrakia, and I dunno why ...');
	}

	return true;	// otherwise, justsay will do the welding for us.
}


function finallyUpdate(route) {
	setupComments(route);
	$('.main-news-content').hover(
		function(){
			$(this).addClass('hilited');
		},
		function(){
			$(this).removeClass('hilited');
		}
	).click(function(){
		$(this).find('a:first').click();
		return false;
	});
}

